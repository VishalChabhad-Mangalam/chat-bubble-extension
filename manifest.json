{
  "manifest_version": 3,
  "name": "Draggable Chat Bubble",
  "version": "1.0",
  "description": "A draggable chat bubble that opens a popup chat window with login and unread message count.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["bubble.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chat"
  },
  "background": {
    "service_worker": "background.js"
  }
}